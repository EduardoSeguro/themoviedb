<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/dark_gray">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageMoviePoster"
        android:layout_width="90dp"
        android:layout_height="135dp"
        android:layout_margin="12dp"
        android:background="@drawable/bg_poster"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textMovieTitle"
        style="@style/movieTitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/movie_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/imageMoviePoster"
        app:layout_constraintStart_toStartOf="@+id/imageMoviePoster"
        app:layout_constraintTop_toBottomOf="@+id/imageMoviePoster" />

</androidx.constraintlayout.widget.ConstraintLayout>